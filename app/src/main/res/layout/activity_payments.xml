<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PaymentsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userTV"
        android:layout_marginTop="5dp"
        android:text="USER"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/paymentsRecylceView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/QuickPay"
        android:layout_below="@+id/userTV"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/QuickPay"
        android:text="Quick Add"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/FloatButtonPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="53dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:src="@drawable/baseline_add_24"
        app:backgroundTint="#646464"
        android:contentDescription="Add Payments"/>

</RelativeLayout>